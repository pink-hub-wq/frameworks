<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean id="user" class="com.edu.seiryo.constructor.User">
	<constructor-arg name="id" value="1"></constructor-arg>
	<constructor-arg name="name" value="张三"></constructor-arg>
	<constructor-arg name="pwd" value="123"></constructor-arg>
</bean>
<bean id="user2" class="com.edu.seiryo.constructor.User">
	<constructor-arg index="0" value="2"></constructor-arg>
	<constructor-arg index="1" value="李四"></constructor-arg>
	<constructor-arg index="2" value="123"></constructor-arg>
</bean>
<bean id="user3" class="com.edu.seiryo.constructor.User">
	<constructor-arg index="0" value="3" type="int"></constructor-arg>
	<constructor-arg index="1" value="王五"></constructor-arg>
</bean>
</beans>