<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.edu.seiryo.entity.ShopInfo" table="tb_shopInfo">
		<id name="id" column="ID">
			<generator class="native"></generator>
		</id>
		<property name="shopId" column="shopId"></property>
		<property name="shopName" column="shopName"></property>
		<property name="price" column="price"></property>
		<property name="oldPrice" column="oldPrice"></property>
		<property name="descr" column="descr"></property>
		<property name="insertDtm" column="insertDtm"></property>
		<property name="imgSrc" column="imgSrc"></property>
	</class>
</hibernate-mapping>